{% extends 'base.html.twig' %}

{% block body %}
    <h1>Feed</h1>

    <table class="table table-hover">
        <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>URL</th>
            <th>Date</th>
        </tr>
        </thead>
        <tbody>
        {% set index = 1 %}
        {% for item in items %}
            <tr>
                <td>{{ index }}</td>
                <td>{{ item.title }}</td>
                <td><a href="{{ item.link }}">View page</a></td>
                <td>{{ item.pubDate }}</td>
            </tr>
            {% set index = index + 1 %}
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-warning" href="{{ path('feed_index') }}">Back to the list</a>
    <a class="btn btn-primary" href="{{ path('feed_edit', { 'id': feed.id }) }}">Edit</a>
    <br>
    <br>
    {{ form_start(delete_form) }}
    <input class="btn btn-danger" type="submit" value="Delete">
    {{ form_end(delete_form) }}
{% endblock %}
